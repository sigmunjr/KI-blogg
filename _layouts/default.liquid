<!doctype html>
<html lang="{{ site.lang }}">
  <!-- Head -->
  <head>
    {% if page.redirect %}
      {% if page.redirect == true %}
        {% assign redirect = site.baseurl | append: '/' %}
      {% elsif page.redirect contains '://' %}
        {% assign redirect = page.redirect %}
      {% else %}
        {% assign redirect = page.redirect | relative_url %}
      {% endif %}
      <meta http-equiv="refresh" content="3; url={{ redirect }}">
    {% endif %}
    {% include head.liquid %}
  </head>

  <!-- Body -->
  <body class="{% if site.navbar_fixed %}fixed-top-nav{% endif %} {% unless site.footer_fixed %}sticky-bottom-footer{% endunless %}">
    <!-- Header -->
    {% include header.liquid %}

    <!-- Content -->
    <div class="container mt-5" role="main">
      {% comment %}{% if page.toc and page.toc.sidebar %}{% endcomment %}
        {% comment %}{% if page.toc.sidebar == 'right' %}{% endcomment %}
          {% comment %}<div class="row">{% endcomment %}
            {% comment %}<!-- main content area -->{% endcomment %}
            {% comment %}<div class="col-sm-9">{{ content }}</div>{% endcomment %}
            {% comment %}<!-- sidebar, which will move to the top on a small screen -->{% endcomment %}
            {% comment %}<div class="col-sm-3">{% endcomment %}
              {% comment %}<nav id="toc-sidebar" class="sticky-top"></nav>{% endcomment %}
            {% comment %}</div>{% endcomment %}
          {% comment %}</div>{% endcomment %}
        {% comment %}{% else %}{% endcomment %}
          {% comment %}<div class="row">{% endcomment %}
            {% comment %}<!-- sidebar, which will move to the top on a small screen -->{% endcomment %}
            {% comment %}<div class="col-sm-3">{% endcomment %}
              {% comment %}<nav id="toc-sidebar" class="sticky-top"></nav>{% endcomment %}
            {% comment %}</div>{% endcomment %}
            {% comment %}<!-- main content area -->{% endcomment %}
            {% comment %}<div class="col-sm-9">{{ content }}</div>{% endcomment %}
          {% comment %}</div>{% endcomment %}
        {% comment %}{% endif %}{% endcomment %}
      {% comment %}{% else %}{% endcomment %}
        {{ content }}
      {% comment %}{% endif %}{% endcomment %}
    </div>

    <!-- JavaScripts -->
    {% include scripts.liquid %}
  </body>
</html>
